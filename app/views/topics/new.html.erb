<h1>New topic</h1><br />
<p>
  <%= @forum.name %><br />
  <%= link_to "Forums", forums_path %> > <%= @forum.name %>
</p>

<% form_for @topic, :url  => forum_topics_path(@forum) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%= f.hidden_field :poster_id, :value => current_user.id -%>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', forum_topics_path %>