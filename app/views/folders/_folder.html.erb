<% content_tag_for :li, folder do %>
  <%- if folder -%>
    <%= link_to h(folder.name), folder_documents_path(folder) %>

    <%- if folder.documents.empty? -%>
      <%= link_to 'Delete', folder, :class => "destroy", :method => :delete %>
    <% else %>
      <%= link_to "Delete", folder, :confirm => "This folder contains files which will be deleted if you choose to delete this folder.  Are you sure you want to delete this folders?", :class => "destroy", :method => :delete %>
    <%- end -%>

    <%- unless folder.children.empty? -%>
      <ul>
        <%= render folder.children %>
      </ul>
    <%- end -%>
  <%- end -%>
<% end %>
