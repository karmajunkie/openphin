<% content_tag_for :li, folder do %>
  <%- if folder -%>
    <%= check_box_tag("folder[id][#{folder.id}]", folder.id) %>
    <%= label_tag("folder[id][#{folder.id}]", link_to(folder.name, folder_documents_path(folder))) %>

    <%- if folder.documents.empty? -%>
      <%= link_to 'Delete', folder, :class => "invis destroy", :method => :delete %>
    <% else %>
      <%= link_to "Delete", folder, :confirm => "This folder contains files which will be deleted if you choose to delete this folder.  Are you sure you want to delete this folders?", :class => "invis destroy confirm", :method => :delete %>
    <%- end -%>

    <%- unless folder.children.empty? -%>
      <ul>
        <%= render folder.children %>
      </ul>
    <%- end -%>
  <%- end -%>
<% end %>
