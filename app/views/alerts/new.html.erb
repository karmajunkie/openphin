<% form_for @alert do |f|%>
  <%= hidden_field_tag 'alert[user_ids][]', nil, :id => :alert_user_id %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :message %>
  <%= f.text_field :message %>
  
  <%= f.label :status %>
  <%= f.select :status, Alert::Statuses %>
  
  #  message     :text
  #  severety    :string(255)
  #  status      :string(255)
  #  acknowledge :boolean
  #  author_id   :integer
  #  created_at  :datetime
  #  updated_at  :datetime
  

  <fieldset>
    <legend>Jurisdictions</legend>
    <%= f.select :jurisdictions, Jurisdiction.all.map{|m| [m.name, m.id]}, {}, :multiple => :multiple   %>
  </fieldset>

  <fieldset>
    <legend>Limit to Certain Roles</legend>
    <%= f.select :roles, Role.all.map{|m| [m.name, m.id]}, {}, :multiple => :multiple %>
  </fieldset>
  
  <fieldset>
    <legend>Limit to Certain Organizations</legend>
    <%= f.select :organizations, Organization.all.map{|m| [m.name, m.id]}, {}, :multiple => :multiple %>
  </fieldset>
<% end %>