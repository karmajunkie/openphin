<dl>
  <dt>Title:</dt>
  <dd class="title"><%=h @alert.title %></dd>

  <dt>Message:</dt>
  <dd class="message"><%=simple_format h(@alert.message) %></dd>

  <dt>Severity:</dt>
  <dd class="severity"><%=h @alert.severity %></dd>

  <dt>Status:</dt>
  <dd class="status"><%=h @alert.status %></dd>

  <dt>Acknowledge:</dt>
  <dd class="acknowledge"><%=h @alert.acknowledge? ? 'Yes' : 'No' %></dd>

  <dt>Communication Methods:</dt>
  <dd class="communication_methods"><%=h @alert.device_types.map{|d| d.constantize.display_name }.to_sentence %></dd>
  
  <dt>People:</dt>
  <dd class="people"><%=h @alert.users.map(&:name).to_sentence %></dd>
  
</dl>
