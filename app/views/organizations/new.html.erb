<% form_for @organization do |form| %>
  <%= form.error_messages %><br/>

  <fieldset>
    <legend>Organization Information</legend>
    <%= form.label :name, 'Organization Name' %><br/>
    <%= form.text_field :name %><br/>
  
<!-- Will be used later
    <%= form.label :organization_type_id, 'Organization Type' %><br/>
-->
    <%= form.hidden_field :organization_type_id, {:value => OrganizationType.first.id}  %>
  
    <%= form.label :distribution_email %><br/>
    <%= form.text_field :distribution_email %><br/>
  
    <%= form.label :description, 'Description of Organization' %><br/>
    <%= form.text_area :description, :rows => "8" %><br/>
   
    <%= form.label :phone %><br/>
    <%= form.text_field :phone %><br/>
  
    <%= form.label :fax %><br/>
    <%= form.text_field :fax %><br/>
  
    <%= form.label :street %><br/>
    <%= form.text_field :street %><br/>
  
    <%= form.label :locality, 'City' %><br/>
    <%= form.text_field :locality %><br/>
  
    <%= form.label :state %><br/>
    <%= form.text_field :state %><br/>
  
    <%= form.label :postal_code, 'Zip' %><br/>
    <%= form.text_field :postal_code %><br/>
  </fieldset>
  <br/>
  <%- unless signed_in? -%>
    <fieldset>
      <legend>Contact Person</legend>
      <%= form.label :contact_display_name, "Name" %><br/>
      <%= form.text_field :contact_display_name %><br/>

      <%= form.label :contact_email, "Email Address" %><br/>
      <%= form.text_field :contact_email %><br/>

      <%= form.label :contact_phone, "Phone Number" %><br/>
      <%= form.text_field :contact_phone %><br/>
    </fieldset>
  <%- end -%>
  
  <fieldset>
    <legend>Counties</legend>
    <%= form.label :jurisdiction_ids, "Jurisdictions", :style => "display:none" %>
    <%= form.select :jurisdiction_ids, Jurisdiction.root.descendants.map{|m| [m.name, m.id]}.sort, {}, :multiple => :multiple, :class => 'crossSelect' %>
  </fieldset>
  
  <%= form.submit 'Save' %>
<% end %>
