<% form_for @share || Share.new, :url => documents_path, :html => {:multipart => true} do |f| %>
  <%- f.object.build_document -%>
  <% f.fields_for :document do |d| %>
    <%= d.label :file, 'Upload Document' %>
    <%= d.file_field :file %>
  <% end %>
  <%= f.label :folder_id %>
  <%= f.select :folder_id, nested_set_options(current_user.folders.roots) {|i| "#{'-' * i.level} #{i}" }, :include_blank => true %>
  <%= f.submit 'Upload' %>
<% end %>
