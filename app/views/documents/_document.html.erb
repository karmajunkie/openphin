<% content_tag_for :li, document do %>
  <%- if f -%>
    <%= f.check_box :document %>
    <%= f.label(:document, link_to(document.file_file_name, document_path(document))) %>
  <%- end -%>
  <%= link_to h(document), document %>
  <%= link_to 'Add to Share', new_document_share_path(document) %>
  <%= link_to 'Move/Edit', edit_document_path(document) if document.editable_by?(current_user) %>
  <%= link_to 'Delete',    folder_document_path(@folder, document),:method => :delete, :class => "destroy" if @folder && document.editable_by?(current_user) %>
  <% if @channel %>
    <%= link_to 'Copy', document_copy_path(document) %>
    <%= link_to 'Remove from share', channel_document_path(@channel, document), :class => :destroy %>
  <% end %>
<% end %>