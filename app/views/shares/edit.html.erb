<% form_for [@share.document, @share] do |form| %>
  <fieldset>
    <legend>Move to Folder</legend>
    
    <%= form.label :folder_id %>
    <%= form.select :folder_id, nested_set_options(current_user.folders.roots) {|i| "#{'-' * i.level} #{i}" }, :include_blank => 'Root' %>
    
    <%= form.submit 'Move' %>
  </fieldset>
<% end %>