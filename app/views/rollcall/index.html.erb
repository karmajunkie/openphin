<% @districts.each do |dist| %>
  <h3><%= dist.name  %></h3>
  <table>
    <tr>
      <td>Date</td>
      <td>Absentee Percentage</td>
    </tr>
    <% Date.today.downto (Date.today-7.days) do |date| %>
      <tr>
        <td class='report_date'><%= date.strftime("%Y-%m-%d") %></td>
        <td class='absentee_pct'><%= (dist.average_absence_rate(date) * 100).to_f.round(2) %></td>
      </tr>
    <% end %>
  </table>
  <div>
    <p>Absenteeism Summary</p>
    <div class="rollcall_summary">
      <ul class="rollcall_summary">
        <li><p>Districts</p></li>
        <% @statistics.each do |district,schools| %>
          <li class="district">
            <p><%= district %></p>
            <ul>
              <li><p>Schools</p></li>
              <% schools.each do |school,reports| %>
                <li class="school">
                  <ul>
                    <li><p><%= school %></p></li>
                    <% reports.each do |report| %>
                      <li class="<%= report.severity %>"><span><%= report.report_date %></span> - <span class="absense"><%= report.absentee_percentage %>%</span></li>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>