<h1>Pending Role requests</h1>

<table>
  <tr>
    <th>Requester</th>
    <th>Role</th>
    <th>Jurisdiction</th>
  </tr>

<% @role_requests.each do |role_request| %>
  <tr class='pending_role_requests'>
    <td class='requester_email'><%=h role_request.requester.email %></td>
    <td class='role'><%=h role_request.role.name %></td>
    <td class='jurisdiction'><%=h role_request.jurisdiction.name %></td>
    <td><a href='<%=approve_role_request_path(role_request) %>' class='approve_link'>Approve</a></td>
    <td><a href='<%=deny_role_request_path(role_request) %>' class='deny_link'>Deny</a></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New role_request', new_role_request_path %>