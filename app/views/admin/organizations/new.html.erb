<% form_for @organization do |form| %>
  <fieldset>
    <legend>Organization Information</legend>
    <%= form.label :name, 'Organization Name' %>
    <%= form.text_field :name %><br/>
  
    <%= form.label :organization_type_id, 'Organization Type' %>
    <%= form.select :organization_type_id, OrganizationType.all.map{|o| [o.name, o.id]} %><br/>
  
    <%= form.label :distribution_email %>
    <%= form.text_field :distribution_email %><br/>
  
    <%= form.label :description, 'Description of Organization' %>
    <%= form.text_field :description %><br/>
   
    <%= form.label :phone %>
    <%= form.text_field :phone %><br/>
  
    <%= form.label :fax %>
    <%= form.text_field :fax %><br/>
  
    <%= form.label :street %>
    <%= form.text_field :street %><br/>
  
    <%= form.label :locality, 'City' %>
    <%= form.text_field :locality %><br/>
  
    <%= form.label :state %>
    <%= form.text_field :state %><br/>
  
    <%= form.label :postal_code, 'Zip' %>
    <%= form.text_field :postal_code %><br/>
  </fieldset>
  
  <%- unless signed_in? -%>
    <fieldset>
      <legend>Contact Person</legend>
      <% fields_for(:user, form.object.contact) do |user|  %>
        <%= user.label :email %>
        <%= user.text_field :email %><br/>
  
        <%= user.label :password %>
        <%= user.text_field :password %><br/>
  
        <%= user.label :password_confirmation %>
        <%= user.text_field :password_confirmation %><br/>
  
        <%= user.label :first_name %>
        <%= user.text_field :first_name %><br/>
  
  
        <%= user.label :last_name %>
        <%= user.text_field :last_name %><br/>
  
        <%= user.label :display_name, 'Preferred name' %>
        <%= user.text_field :display_name %><br/>
    
        <%= user.label(:preferred_language) %>
        <%= user.select(:preferred_language, ["English","Spanish"]) %><br/>    
      <% end %>
    </fieldset>
  <%- end -%>
  
  <fieldset>
    <legend>Counties</legend>
    <%= form.select :jurisdiction_ids, Jurisdiction.all.map{|m| [m.name, m.id]}, {}, :multiple => :multiple, :class => 'crossSelect' %>
  </fieldset>
  
  <%= form.submit 'Save' %>
<% end %>
