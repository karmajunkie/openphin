<% form_for(:phin_person, :url => { :action => "create" }) do |f| #, :id => @phin_person.encodedID%>
  <%= f.error_messages %><br/>
  <%= f.label(:givenname, "First Name") %><br/>
  <%= f.text_field(:givenname) %><br/>
  <%= f.label(:sn, "Last Name") %><br/>
  <%= f.text_field(:sn) %><br/>
  <%= f.label(:displayname, "Preferred name to be displayed") %><br/>
  <%= f.text_field(:displayname) %><br/>
  <%= f.label(:description, "Description of person") %><br/>
  <%= f.text_field(:description) %><br/>
  <%= f.label(:mail, "E-mail address") %><br/>
  <%= f.text_field(:mail) %><br/>
  <%= f.label(:preferredlanguage, "Preferred lanaguage") %><br/>
  <%= f.select(:preferredlanguage, ["English","Spanish"]) %><br/>
  <%= f.label(:title, "Job title") %><br/>
  <%= f.text_field(:title) %><br/>
  <%= f.label(:roles, "Roles") %><br/>
  <%= select_tag "phin_roles", options_from_collection_for_select(PhinRole.all, :cn, :cn) %>
  <%= button_to_function 'Request Role', "jsAddRole()" %>
  <div id="phin_role_list">
    <ul>
    <% @phin_person.phin_roles.each do |role| %>
    <li>
    	<%= hidden_field_tag "phin_person[phin_roles][]", role.cn %>
    	<%= role.cn %>
    </li>
    <% end %>
    </ul>
  </div>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>